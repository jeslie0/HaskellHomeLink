extra-source-files: ../proto/*.proto

common warnings
    ghc-options: -Wall

custom-setup
    setup-depends: base,
                   Cabal,
                   proto-lens-setup

executable Home
    -- Import common warning flags.
    import:           warnings

    -- .hs or .lhs file containing the Main module.
    main-is:          Home/Main.hs

    -- Modules included in this executable, other than Main.
    other-modules:    Envelope,
                      Home.AudioStream,
                      Home.AudioStreamTypes,
                      Home.Handler,
                      Home.Env,
                      Home.Options,
                      Devices,
                      Logger,
                      Router,
                      System,
                      System.CPU,
                      System.Memory,
                      State,
                      Parsing,
                      ProtoHelper,
                      TLSHelper,
                      TH,
                      Utilities.Either,
                      Ports,

                      -- Proto medules
                      Proto.Camera,
                      Proto.Camera_Fields,
                      Proto.Envelope,
                      Proto.Envelope_Fields,
                      Proto.Logging,
                      Proto.Logging_Fields,
                      Proto.Radio,
                      Proto.Radio_Fields,
                      Proto.DeviceData,
                      Proto.DeviceData_Fields,
    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:

    -- Other library packages from which modules are imported.
    build-depends:
                      -- Data
                      aeson,
                      attoparsec,
                      bytestring,
                      cereal,
                      containers,
                      mtl,
                      text,
                      vector,

                      -- Services
                      alsa-hs,
                      minimp3-hs,

                      -- TLS
                      crypton-x509,
                      crypton-x509-store,
                      crypton-x509-validation,
                      data-default-class,
                      tls,

                      -- HTTP Client
                      http-client,
                      http-client-tls,
                      http-types,

                      -- Tools
                      microlens,
                      microlens-th,
                      template-haskell,

                      -- Protobuf
                      proto-lens,
                      proto-lens-runtime,

                      -- General
                      base,
                      directory,
                      eventloop-hs,
                      network,
                      options,
                      random,
                      rxtx,
                      time


    build-tool-depends: proto-lens-protoc:proto-lens-protoc
                        -- ^>= 0.9.0.0

    -- Directories containing source files.
    hs-source-dirs:   app

    -- Base language which the package is written in.
    default-language: GHC2021

    ghc-options: -main-is Home.Main -O2 -threaded -split-objs
              -- -Wunused-packages

